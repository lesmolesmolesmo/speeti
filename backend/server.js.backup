app.get('/api/track/:orderNumber', (req, res) => {
  const { orderNumber } = req.params;
  
  // Order number format: SPEETI-XXXXX or just the number
  const orderNum = orderNumber.replace('SPEETI-', '').replace('speeti-', '');
  
  db.get(`
    SELECT 
      o.id, o.status, o.total, o.delivery_fee, o.created_at, o.scheduled_time,
      o.street, o.house_number, o.plz, o.city,
      u.name as customer_name
    FROM orders o
    LEFT JOIN users u ON o.user_id = u.id
    WHERE o.id = ? OR o.id = (SELECT id FROM orders WHERE id LIKE '%' || ? || '%' LIMIT 1)
  `, [orderNum, orderNum], (err, order) => {
    if (err) return res.status(500).json({ error: err.message });
    if (!order) return res.status(404).json({ error: 'Bestellung nicht gefunden' });
    
    // Get order items
    db.all(`
      SELECT oi.quantity, oi.price, p.name, p.image
      FROM order_items oi
      LEFT JOIN products p ON oi.product_id = p.id
      WHERE oi.order_id = ?
    `, [order.id], (err, items) => {
      if (err) return res.status(500).json({ error: err.message });
      
      // Calculate estimated delivery time based on status
      const statusTimeline = {
        pending: { step: 1, label: 'Bestellung eingegangen', icon: 'üìã' },
        confirmed: { step: 2, label: 'Bestellung best√§tigt', icon: '‚úÖ' },
        preparing: { step: 3, label: 'Wird vorbereitet', icon: 'üë®‚Äçüç≥' },
        ready: { step: 4, label: 'Bereit zur Auslieferung', icon: 'üì¶' },
        delivering: { step: 5, label: 'Auf dem Weg', icon: 'üö¥' },
        delivered: { step: 6, label: 'Geliefert', icon: 'üéâ' },
        cancelled: { step: 0, label: 'Storniert', icon: '‚ùå' }
      };
      
      const currentStatus = statusTimeline[order.status] || statusTimeline.pending;
      
      res.json({
        orderNumber: 'SPEETI-' + String(order.id).padStart(5, '0'),
        status: order.status,
        statusInfo: currentStatus,
        total: order.total,
        deliveryFee: order.delivery_fee,
        address: {
          street: order.street,
          houseNumber: order.house_number,
          plz: order.plz,
          city: order.city
        },
        customerName: order.customer_name?.split(' ')[0] || 'Kunde', // First name only for privacy
        items: items,
        createdAt: order.created_at,
        scheduledTime: order.scheduled_time,
        timeline: Object.entries(statusTimeline)
          .filter(([key]) => key !== 'cancelled')
          .map(([key, val]) => ({
            status: key,
            ...val,
            completed: val.step <= currentStatus.step && order.status !== 'cancelled',
            current: key === order.status
          }))
      });
    });
  });
});


