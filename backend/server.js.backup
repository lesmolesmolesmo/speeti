// ================================================

// Get all admin settings
app.get('/api/admin/settings', auth(['admin']), (req, res) => {
  db.all('SELECT key, value FROM shop_settings', [], (err, rows) => {
    if (err) return res.status(500).json({ error: err.message });
    const settings = {};
    rows.forEach(row => settings[row.key] = row.value);
    res.json(settings);
  });
});

// Save admin settings (bulk)
app.post('/api/admin/settings', auth(['admin']), (req, res) => {
  const settings = req.body;
  const stmt = db.prepare('INSERT OR REPLACE INTO shop_settings (key, value, updated_at) VALUES (?, ?, CURRENT_TIMESTAMP)');
  
  // Map frontend keys to backend keys
  const keyMap = {
    deliveryFee: 'delivery_fee',
    freeDeliveryMin: 'free_delivery_threshold',
    minOrder: 'min_order_value'
  };
  
  Object.entries(settings).forEach(([key, value]) => {
    const dbKey = keyMap[key] || key;
    stmt.run(dbKey, String(value));
  });
  
  stmt.finalize(err => {
    if (err) return res.status(500).json({ error: err.message });
    res.json({ success: true });
  });
});

